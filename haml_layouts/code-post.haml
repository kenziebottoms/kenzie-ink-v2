!!!
%html
    {% include header.html %}
    %body
        %div#wrapper
            %h1.page-heading.right
                {% include title.html %}
            {% include code-menu.html %}
            %div.feature-wrapper.code
                %div.code.feature
                    {{ content }}
            %div.code.ribbon
                {% for post in site.categories.code %}
                    <a class="post-link" href="{{ post.url }}" date="{{ post.date | date: "%b %-d, %Y" }}" title="{{ post.title }}">
                        <div class="thumb" style="background-image: url({{ post.imgsrc }})">
                        </div>
                    </a>
                {% endfor %}
                %div.clearfix