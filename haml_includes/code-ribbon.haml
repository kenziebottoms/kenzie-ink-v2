%div.code.ribbon
    {% for post in site.categories.code %}
        <a class="post-link" href="{{ post.url }}" date="{{ post.date | date: "%b %-d, %Y" }}" title="{{ post.title }}">
            <div class="thumb" style="background-image: url({{ post.imgsrc }})">
            </div>
        </a>
    {% endfor %}
    %div.clearfix